{
  "compilerOptions": {
    "target": "ES2018",
    "module": "Node16",
    "lib": ["ES2018"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "src/**/*"
  ]
}
