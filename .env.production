# Azure Speech Services (client-safe with proper CORS/domain restrictions)
VITE_AZURE_SPEECH_REGION=eastus2
VITE_AZURE_SPEECH_VOICE=en-US-JennyNeural

# Feature flags
VITE_USE_MP3_FALLBACK=false
